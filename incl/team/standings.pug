				each item, index in standings
					.standings-row
						div.standings-col
							- var standingsPosition = '';
								case index
									when 0
										- var standingsPosition = 'first';
									when 1
									when 2
										- var standingsPosition = 'top';
									when 9
										- var standingsPosition = 'penult';
									when 10
										- var standingsPosition = 'last';
